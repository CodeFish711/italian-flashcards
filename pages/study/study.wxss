/* pages/study/study.wxss */
page {
  background-color: #ffffff; /* 纯白背景 */
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  background-color: #ffffff; /* 确保容器也是白色 */
}

/* --- 固定容器：锁定布局，防止内容移动 --- */
.fixed-container {
  width: 100%;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  /* 固定宽度和位置，防止内部元素状态变化导致布局移动 */
}

/* --- 移除动态背景系统（纯白背景不需要） --- */
.bg-layer {
  display: none; /* 隐藏背景层 */
}

/* --- 主内容容器 (去卡片化，全屏布局) --- */
.content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1); /* 更平滑的动画 */
  will-change: transform;
  transform-style: preserve-3d; /* 启用3D变换 */
  perspective: 1000px; /* 3D透视效果 */
  backface-visibility: hidden; /* 防止翻转时闪烁 */
  /* 固定宽度，防止内部元素变化导致移动 */
}

/* 移除原有的 .card 样式 */
/* .card { ... } */

/* 顶部 Header */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  min-height: 100rpx;
  margin-bottom: 20rpx;
  flex-shrink: 0;
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
  position: relative; /* 相对定位，防止移动 */
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.header-top-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.mode-label {
  font-size: 26rpx;
  color: #4a5568;
  font-weight: 600;
  padding: 6rpx 16rpx;
  background-color: #f7fafc;
  border-radius: 16rpx;
}

.header-right {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.level-tag {
  font-size: 26rpx;
  color: white;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 800;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  min-width: 60rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

/* 优雅色谱：从清新到深邃的自然渐变 */
.level-A1 {
  background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%); /* 天空蓝 - 清新入门 */
}

.level-A2 {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%); /* 薄荷绿 - 活力基础 */
}

.level-B1 {
  background: linear-gradient(135deg, #22d3ee 0%, #06b6d4 100%); /* 青蓝色 - 清新进阶 */
}

.level-B2 {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); /* 温暖金 - 明亮高级 */
}

.level-C1 {
  background: linear-gradient(135deg, #fb7185 0%, #f43f5e 100%); /* 珊瑚粉 - 热情流利 */
}

.level-C2 {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%); /* 优雅紫 - 深邃精通 */
}

.progress-pill {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(4px);
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.progress-text {
  font-size: 24rpx;
  color: #4a5568;
  font-weight: 700;
}

.fav-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.fav-icon {
  font-size: 40rpx;
  transition: color 0.3s;
  margin-top: -4rpx; /* 微调居中 */
}

/* 1. 单词核心区 (30% 左右权重) */
.word-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  min-height: 200rpx;
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
  position: relative; /* 相对定位，防止移动 */
  /* 增加一点文字阴影提升可读性，防止背景干扰 */
}

.word {
  font-size: 100rpx; /* 再次加大，全屏模式下可以更奔放 */
  font-weight: 800;
  color: #2d3748;
  line-height: 1.1;
  text-align: center;
  /* margin-bottom: 16rpx; */ /* 移入 word-row 控制 */
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.word-row {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 16rpx;
}

.detail-icon-btn {
  position: absolute;
  right: -80rpx; /* 放在单词右侧，距离更远 */
  top: 50%;
  transform: translateY(-50%);
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ebf8ff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  transition: all 0.3s;
}

.detail-icon-btn:active {
  transform: translateY(-50%) scale(0.95);
  background-color: #bee3f8;
}

.detail-icon-btn text {
  font-size: 40rpx;
}

.pronunciation {
  font-size: 34rpx;
  color: #718096;
  font-family: "Times New Roman", serif;
  font-style: italic;
  margin-bottom: 20rpx;
}

.pos-capsule {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
  height: 48rpx;
  padding: 2rpx;
}

.pos-abbr {
  background-color: #4a5568;
  color: white;
  font-size: 22rpx;
  font-weight: 800;
  padding: 0 16rpx;
  height: 100%;
  line-height: 44rpx;
  border-radius: 12rpx;
}

.pos-cn {
  color: #4a5568;
  font-size: 24rpx;
  font-weight: 600;
  padding: 0 16rpx;
  height: 100%;
  line-height: 44rpx;
}

/* 2. 例句卡片区 (保留轻量级背景) */
.context-card {
  background: rgba(255, 255, 255, 0.75); /* 提高透明度 */
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-left: 8rpx solid #38a169;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03);
  flex-grow: 1; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
  position: relative; /* 相对定位，防止移动 */
}

.example-text {
  font-size: 38rpx;
  color: #1a202c;
  line-height: 1.6;
  font-weight: 500;
  font-family: "Georgia", serif;
}

.highlight {
  color: #2f855a;
  font-weight: 800;
  border-bottom: 4rpx solid rgba(56, 161, 105, 0.3);
}

.example-translation {
  font-size: 28rpx;
  color: #718096;
  margin-top: 10rpx;
  min-height: 40rpx; /* 固定高度，避免布局变化 */
  display: block;
  opacity: 0; 
}
.example-translation.fade-in { 
  animation: fadeIn 0.4s ease-out forwards; 
}
.example-translation.hidden {
  opacity: 0;
  visibility: hidden; /* 占据空间但不可见 */
}

.spacer { flex: 0.2; } /* 小占位 */

/* 3. 选项区 (全屏模式下按钮风格调整) */
.options-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: auto; 
  padding-bottom: 30rpx; /* 增加底部安全距离 */
  flex-shrink: 0;
  min-height: 300rpx; /* 固定最小高度，避免布局变化 */
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
}

.option-btn {
  background: #f7fafc; /* 默认浅灰背景 */
  border: none; /* 移除边框 */
  color: #4a5568;
  border-radius: 30rpx;
  padding: 32rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  transform: translateY(0);
  transition: background-color 0.2s ease;
  min-height: 88rpx; /* 固定最小高度，避免状态变化导致高度变化 */
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
  position: relative; /* 相对定位，防止移动 */
}

.btn-hover {
  transform: translateY(2rpx);
  background-color: #edf2f7;
}

/* 状态样式 - 使用背景填充 */
.option-btn.correct {
  background: #c6f6d5 !important; /* 绿色填充 */
  color: #22543d;
  box-shadow: 0 4rpx 12rpx rgba(104, 211, 145, 0.3);
}

.option-btn.wrong {
  background: #fed7d7 !important; /* 红色填充 */
  color: #742a2a;
  box-shadow: 0 4rpx 12rpx rgba(252, 129, 129, 0.3);
}

.option-btn.correct-hint {
  background: #c6f6d5 !important; /* 绿色填充 */
  color: #22543d;
  box-shadow: 0 4rpx 12rpx rgba(104, 211, 145, 0.3);
  animation: pulse 1.5s infinite;
}

.option-btn[disabled] {
  opacity: 1; /* 保持可见，只是不能点击 */
}

/* 底部按钮 */
.footer-area { 
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  min-height: 100rpx; /* 固定高度，避免布局变化 */
  flex-shrink: 0;
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
  align-items: center;
  justify-content: space-between;
  min-height: 80rpx; /* 固定高度 */
  width: 100%; /* 固定宽度，防止移动 */
  box-sizing: border-box;
}

.footer-buttons.center {
  justify-content: center;
  /* 答对时，左侧按钮隐藏，右侧按钮居中 */
}

.footer-buttons.center .next-btn {
  width: 300rpx; /* 居中时固定宽度，稍微窄一点 */
}

.footer-buttons .hidden {
  display: none;
  /* 完全隐藏，不占空间 */
}

/* 所有按钮统一固定宽度，避免布局变化 */
.add-mistake-btn,
.next-btn,
.remove-mistake-btn {
  width: calc(50% - 10rpx); /* 两个按钮时各占一半，减去 gap 的一半 */
  min-height: 80rpx; /* 固定高度 */
  box-sizing: border-box;
  flex: 0 0 auto; /* 不使用 flex: 1，固定宽度 */
}

.add-mistake-btn {
  background: #fed7d7;
  color: #742a2a;
  border-radius: 40rpx;
  font-weight: bold;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
}

.detail-btn {
  background: #4299e1; 
  color: white; 
  border-radius: 40rpx; 
  font-weight: bold; 
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  flex: 1;
}

.next-btn {
  background: #38a169; 
  color: white; 
  border-radius: 40rpx; 
  font-weight: bold; 
  font-size: 30rpx;
  padding: 20rpx 30rpx;
}

.remove-mistake-btn {
  background: #c6f6d5;
  color: #22543d;
  border-radius: 40rpx;
  font-weight: bold;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 70%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 20rpx;
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
  background: #f7fafc;
  border-bottom: 1rpx solid #e2e8f0;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.detail-item {
  margin-bottom: 24rpx;
}

.item-label {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 32rpx;
  color: #2d3748;
}

.item-value.highlight {
  font-weight: bold;
  font-size: 40rpx;
  color: #2b6cb0;
}

.trans {
  font-size: 28rpx;
  color: #718096;
  margin-top: 8rpx;
}

.close-btn {
  margin: 30rpx;
  background: #4a5568;
  color: white;
}

/* 彩带喷发绽放动画 */
.confetti-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 999;
  overflow: hidden;
}

.confetti {
  position: absolute;
  border-radius: 50%;
  opacity: 0.9;
  box-shadow: 0 0 6rpx currentColor;
}

/* 彩带雨动画 */
.confetti-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 999;
  overflow: hidden;
}

.confetti {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  opacity: 0.9;
  animation: confettiFall linear forwards;
}

@keyframes confettiFall {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(150vh) rotate(720deg);
    opacity: 0;
  }
}

/* 庆祝文字特效 */
.celebration-text {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  z-index: 1000;
  pointer-events: none;
  opacity: 0;
}

.celebration-text.show {
  animation: celebrationPop 1.5s ease-out forwards;
}

.celebration-text-content {
  font-size: 120rpx;
  font-weight: 800;
  color: #48bb78;
  letter-spacing: 6rpx;
  display: block;
  text-align: center;
}

@keyframes celebrationPop {
  0% {
    transform: translate(-50%, -50%) scale(0) rotate(-5deg);
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1) rotate(2deg);
    opacity: 1;
  }
  70% {
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(0.95) rotate(0deg);
    opacity: 0;
  }
}

@keyframes fadeIn { from { opacity: 0; transform: translateY(-10rpx); } to { opacity: 1; transform: translateY(0); } }
@keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.02); } 100% { transform: scale(1); } }


