<!--pages/favorites/favorites.wxml-->
<view class="container">
  <view class="header">
    <text class="title">我的收藏</text>
    <text class="subtitle">Favorites</text>
  </view>

  <view class="list-area" wx:if="{{!isLoading}}">
    <block wx:if="{{favorites.length > 0}}">
      <view class="fav-item" wx:for="{{favorites}}" wx:key="_id" catchtap="startStudy" data-word-id="{{item.word_id}}">
        <view class="word-info">
          <text class="word">{{item.word_snapshot.word}}</text>
          <text class="meaning">{{item.word_snapshot.meaning}}</text>
        </view>
        <view class="action-btn" catchtap="removeFavorite" data-id="{{item._id}}" data-index="{{index}}">
          <text class="remove-icon">✕</text>
        </view>
      </view>
    </block>
    
    <view class="empty-state" wx:else>
      <text class="empty-text">收藏夹是空的，快去添加吧！</text>
    </view>
  </view>
  
  <view class="loading" wx:else>
    <text>加载中...</text>
  </view>
</view>

