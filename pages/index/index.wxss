/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  background-color: #f8f8f8;
  height: 100vh;
}

.title-area {
  margin-bottom: 100rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.action-area {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* 统一按钮间距 */
}

.start-btn {
  background-color: #1aad19;
  color: white;
  margin-bottom: 0; /* 移除，改用 gap */
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
}

.review-btn {
  background-color: #ffffff;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
}

