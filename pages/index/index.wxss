/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f7fafc 0%, #ffffff 100%);
  overflow: hidden;
}

/* 顶部区域 */
.header {
  padding: 0rpx 30rpx 20rpx;
  margin-top: -80rpx;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 20rpx;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}

.title {
  font-size: 68rpx;
  font-weight: 800;
  color: #2d3748;
  line-height: 1.2;
}

.subtitle {
  font-size: 26rpx;
  color: #718096;
  display: block;
  margin-left: 120rpx; /* 与logo对齐 */
}

/* 级别卡片区域 */
.levels-area {
  flex: 1;
  padding: 0 30rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 28rpx;
  margin-bottom: 20rpx;
}

.level-card {
  background: white;
  border-radius: 28rpx;
  padding: 60rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  transition: transform 0.2s, box-shadow 0.2s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 140rpx;
}

.level-card:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.12);
}

.level-badge {
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  min-width: 80rpx;
  text-align: center;
  letter-spacing: 1rpx;
  box-shadow: 0 3rpx 10rpx rgba(0,0,0,0.15);
  margin-bottom: 20rpx;
}

.level-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 优雅色谱：从清新到深邃的自然渐变 */
.level-A1 {
  background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%); /* 天空蓝 - 清新入门 */
}

.level-A2 {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%); /* 薄荷绿 - 活力基础 */
}

.level-B1 {
  background: linear-gradient(135deg, #22d3ee 0%, #06b6d4 100%); /* 青蓝色 - 清新进阶 */
}

.level-B2 {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); /* 温暖金 - 明亮高级 */
}

.level-C1 {
  background: linear-gradient(135deg, #fb7185 0%, #f43f5e 100%); /* 珊瑚粉 - 热情流利 */
}

.level-C2 {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%); /* 优雅紫 - 深邃精通 */
}

.progress-bar-container {
  width: 100%;
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 进度条颜色与等级标签保持一致 */
.progress-A1 {
  background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
}

.progress-A2 {
  background: linear-gradient(90deg, #34d399 0%, #10b981 100%);
}

.progress-B1 {
  background: linear-gradient(90deg, #22d3ee 0%, #06b6d4 100%);
}

.progress-B2 {
  background: linear-gradient(90deg, #fbbf24 0%, #f59e0b 100%);
}

.progress-C1 {
  background: linear-gradient(90deg, #fb7185 0%, #f43f5e 100%);
}

.progress-C2 {
  background: linear-gradient(90deg, #a78bfa 0%, #8b5cf6 100%);
}

.level-stats {
  font-size: 26rpx;
  color: #718096;
  font-weight: 600;
  text-align: center;
}

/* 底部 */
.footer {
  padding: 15rpx 30rpx 20rpx;
}

.footer-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.footer-action-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  min-width: 140rpx;
  transition: all 0.2s;
  border: 1rpx solid #e2e8f0;
}

.footer-action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.08);
  background: #f7fafc;
}

.footer-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.footer-label {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 600;
}

.debug-btn {
  font-size: 22rpx;
  color: #a0aec0;
  background: transparent;
  border: none;
  padding: 12rpx;
  text-align: center;
  width: 100%;
}

